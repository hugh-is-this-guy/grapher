extends layout

block content
  #header
    h1=title
    .row
      .col-md-1
        a(id='about' class='nav' href='#about') About
      .col-md-1
        a(id='graph' class='nav' href='#graph') Graph

  #content
    #graph
      h2 Graph
      .row
        .col-md-2
          h3 Search
          input(type='search' name='name-search' id='name-search')
          #results
            ul
          a(id='clear' href='#!') clear

        #svg.col-md-8

        .col-md-2
          h3 Selections
          #selection-1.selection
            h4 Selection 1
            svg(height='30' width='30')
              circle(cx='15' cy='15' r='15' fill='#1f77b4')           
            .label Id:

            .label Name:

          #selection-2.selection
            h4 Selection 2
            svg(height='30' width='30')
              circle(cx='15' cy='15' r='15' fill='#9467bd')
            .label Id:
            .label Name:

    #about
      h2 About
  
